<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">#ffffff</item>
        <item name="colorPrimary">@color/sky</item>
        <item name="colorPrimaryDark">@color/sky</item>


        <item name="fontFamily">@font/app_font</item>

        <item name="listPreferredItemHeightSmall">78dp</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>

        <item name="textAppearanceLargePopupMenu">@style/PopUpTextAppearance</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopUpTextAppearance</item>

        <item name="android:itemBackground">@drawable/background_popup_items</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@color/status_bar_color</item>

    </style>


    <style name="nav_text_appearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExpandedToolbarTitleAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/half_transparent</item>
        <item name="android:textSize">44sp</item>
    </style>

    <style name="CollapsedToolbarTitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/half_transparent</item>
    </style>

    <style name="PopUpTextAppearance" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="YellowDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorControlActivated">@color/light_yellow</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:textColorSecondary">@color/light_yellow</item>
    </style>

    <style name="RedDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="android:colorControlActivated">@color/light_red</item>
        <item name="android:textColorPrimary">@color/red</item>
        <item name="android:textColorSecondary">@color/light_red</item>
    </style>
    <style name="BlueDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorControlActivated">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:textColorSecondary">@color/light_blue</item>
    </style>
    <style name="GreenDatePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:colorControlActivated">@color/light_green</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:textColorSecondary">@color/light_green</item>
    </style>

</resources>
